<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RetiroCaja">

    <TextView
        android:id="@+id/txtRegistro5"
        android:layout_width="338dp"
        android:layout_height="41dp"
        android:layout_marginTop="128dp"
        android:fontFamily="sans-serif-light"
        android:text="¿Cuanto Quieres Depositar?"
        android:textColor="#222020"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.383"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Saldo en la Cajita:"
        android:textColor="#676767"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@+id/lblSaldoCaja"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRegistro5" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Saldo en la Cajita:"
        android:textColor="#676767"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@+id/lblSaldoCaja"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRegistro5" />

    <TextView
        android:id="@+id/lblSaldoCaja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="196dp"
        android:text="$10.000,99"
        android:textColor="#252525"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRegistro5" />

    <TextView
        android:id="@+id/lblSaldo3"
        android:layout_width="353dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:text="El monto se depositará en tu cuenta  Nu y podrás usarlo al instante. "
        android:textColor="#494848"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtCajaDepo"
        tools:layout_editor_absoluteX="28dp" />

    <EditText
        android:id="@+id/txtCajaDepo"
        android:layout_width="285dp"
        android:layout_height="39dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@+id/btnBorrarR"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/txtRegistro6"
        android:layout_width="19dp"
        android:layout_height="32dp"
        android:layout_marginTop="88dp"
        android:fontFamily="sans-serif-light"
        android:text="$"
        android:textColor="#1B1A1A"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtCajaDepo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageButton
        android:id="@+id/btnVolverC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="48dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/equis" />

    <ImageButton
        android:id="@+id/btnDepositarR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="28dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/flechacorrecta" />

    <ImageButton
        android:id="@+id/btnBorrarR"
        android:layout_width="48dp"
        android:layout_height="41dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="28dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblSaldoCaja"
        app:srcCompat="@drawable/equis" />

    <TextView
        android:id="@+id/txtResultadoR"
        android:layout_width="336dp"
        android:layout_height="139dp"
        android:layout_marginBottom="348dp"
        android:textColor="#4D27A6"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblSaldo3"
        app:layout_constraintVertical_bias="0.8" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="28dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/informacion" />

</androidx.constraintlayout.widget.ConstraintLayout>